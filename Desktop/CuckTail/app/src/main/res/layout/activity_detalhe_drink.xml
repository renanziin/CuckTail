<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".scenarios.detalheDrink.DetalheDrinkActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/imgDrink"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
            />



            <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pbCarregandoDetalheDrink"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp"
                    android:visibility="invisible"/>

        </FrameLayout>


        <TextView
                android:id="@+id/tvNomeDrinkDetalhe"
                style="@style/textViewsDetalheDrink"
                android:text="@string/nome_do_drink"
                android:layout_marginTop="30dp"
        />

        <TextView
                android:id="@+id/tvModoPreparo"
                style="@style/textViewsDetalheDrink"
                android:text="@string/modo_de_preparo"
        />

        <TextView
                android:id="@+id/tvIngredientes"
                style="@style/textViewsDetalheDrink"
                android:text="@string/ingredientes"
        />



    </LinearLayout>




</ScrollView>